.app
  width 100%
  height 100%
  position relative
  .tab-wrapper
    width 100%
    left 0
    bottom 0
    background #fff
    z-index 5
    position fixed 
    .tabBar
      width 100%
      height 50px
      display flex
      flex-flow: row nowrap;
      align-items center
      justify-content space-around
      z-index: 6;
      border-top: 1px solid #d9d9d9;
      .nav-link
        text-decoration none
        outline 0
        color #666
        &.active
          color #b4282d
        .item
          display flex
          flex-direction column
          justify-content space-around
          align-items center
          .tab-icon
            width 20px
            height 20px
          .txt     
            padding-top 4px
            font-size 12px
            line-height 12px
    .tab-view
      width 100%
      position fixed
      top 0
      // left 0