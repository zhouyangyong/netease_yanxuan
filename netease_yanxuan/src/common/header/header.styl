.header
  width 100%
  height 100%
  background-color #fff
  border-bottom 1px solid #d9d9d9
  position relative
  box-sizing border-box
  .line
    z-index 2
    display flex
    align-items center
    padding 8px 15px
    .logo
      width 70px
      height 20px
      margin-right 10px
    .search-box
      flex 1
    .login-btn
      margin-left 8px
      width 37px
      height 20px
      line-height 20px
      font-size 12px
      text-align center
      color #b4282d
      border 1px solid #b4282d
      border-radius 4px
  