.goodInCartContainer
  width 100%
  box-sizing border-box
  padding 15px
  display flex
  background-color #ffffff
  margin-bottom 10px
  .selectedOrNot
    width 20px
    line-height 90px
    img
      width 100%
  .goodInCartPic
    width 90px
    height 90px
    margin 0 10px
    img
      width 100%
  .goodInCartInfo
    display flex
    flex-direction column
    justify-content space-between
    font-size 14px
    .goodInCartInfo-spec
      font-size 12px
      color #7f7f7f
      padding 3px
      border-radius 5px
      width 100%
      border 1px solid #dddddd
      background-color #fafafa
