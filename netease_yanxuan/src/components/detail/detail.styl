.detailContainer
  width 100%
  height 85vh
  .detail-header
    width 100%
    .goodSwiperContainer
      position relative
      width 375px
      img 
        width 100%
        height 375px
    .goodPrice
      color #bd282d
      font-size 22px
      font-weight 800
      margin-left 12px
    .goodInfo
      padding 15px
      display flex
      justify-content space-between
      .infoDesc
        margin-top 5px
        font-size 12px
        color #7f7f7f
      .goodCmtRate
        margin-bottom 5px 
        line-height 1
        color #b4282d
        font-size 18px
      .goodCmtRateText
        font-size 12px
        color #7f7f7f
        text-align center
  .optionsAndServer
    margin-top 10px
    width 100%
    .options
      width 100%
      padding 15px
      padding-top 0
    .server
      width 100%
      padding 15px
      display flex
      padding-top 0
      ul
        margin 0
        color #7f7f7f
        font-size 14px
        white-space nowrap
  .detail-footer
    background-color #ffffff
    display flex
    position fixed
    bottom 51px
    left 0
    right 0
    height 52px
    width 100%
    z-index 2
    .goCart
    .customerServer
      width 52px
      border-top 1px solid #dddddd
      border-right 1px solid #dddddd
      img 
        width 36px
        margin-top 8px
        margin-left 8px
    .promptToPurchase
      flex 1
      line-height 52px
      text-align center
      border-top 1px solid #dddddd  
    .addToCart
      line-height 52px
      flex 1
      text-align center
      background-color #b4282d
      color #ffffff
  .detail-goBack
    width 20px
    height 20px
    position absolute
    z-index 3
    top 15px
    left 8px
    display flex
    white-space nowrap
    color #8a8a8a
    img 
      width 100%
.jx
  height 10vh  
.waitGet
  height 375px
  width 375px
  text-align center
  padding-top 200px

.swiper-pagination-bullet-active
  background-color: #DDDDDD
