.recommendPage
  width 100%
  height 100%
  background #eeeeee
  .slider-container
    width 100%
    height 185px
    position relative
    img 
     width 100%
     height 100%
    .swiper-pagination
      position absolute
      bottom 6px
    .swiper-pagination-bullet-active
      background-color: #DDDDDD
  .pllicy-desc
    width 100%
    height 36px
    background #fff
    padding 0 15px
    box-sizing border-box
    display flex
    align-items center
    justify-content space-between
    .item
      display flex
      align-items center
      img 
        width 16px
        height 16px
      .text
        font-size 12px
        color #333
        line-height 36px
        margin-left 4px
  .content
    width 100%
    height 100%
    .kingKong-list
      width 100%
      height 186px
      background #fff
      display flex
      align-items center
      justify-content space-between
      flex-wrap wrap
      padding-bottom 16px
      .item
        display flex
        margin 5px 10px 3px
        flex-direction column
        align-items center
        justify-content center
        img 
          width 55px
          height 55px
        .text
          font-size 12px
          color #333333
          margin-top 5px
          line-height 18px
    .newItem-list
      margin-top 10px
      padding-bottom 13px
      background #fff
      .moduleTitle
        width 100%
        height 50px    
        padding 0 15px
        color #333333
        box-sizing border-box
        .left
          float left
          font-size 16px
          line-height 50px
        .right
          float right 
          font-size 14px
          line-height 50px       
          .icon
            display inline-block
            vertical-align middle
            background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/index-titleArrow-193a1a730c.png)
            background-repeat no-repeat
            background-size 100% 100%
            width 6px
            height 12px
            margin -3px 0 0 3px
