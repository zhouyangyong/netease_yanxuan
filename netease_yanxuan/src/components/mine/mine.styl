.mainPage
  width 100%
  height 100%
  color #333
  .header
    width 100%
    height 135px
    background-image url(https://yanxuan.nosdn.127.net/d069279e5834bbca17065a9855a014bf.png)
    background-size 100%
    background-position bottom center
    padding-left 15px
    overflow hidden
    .m-info
      width 270px
      box-sizing border-box
      display flex
      align-items center
      padding 32px 0
      .avatar
        width 70px
        height 70px
        border-radius 50%
        vertical-align middle
      .info
        flex 1
        margin-left 15px
        line-height 1
        .nickName
          color #fff
          font-size 18px
          line-height 1.2
          margin-bottom 5px
          text-overflow ellipsis
          white-space nowrap
          overflow hidden
        .memberTitle
          color #fff
          font-size 14px
          vertical-align middle
  .myAsset
    background #fff
    border-bottom 10px solid #F4F4F4
    .tt
      width 100%
      font-size 14px
      margin-left 15px
      line-height 52px
      border-bottom 1px solid #D9D9D9
    .assetList
      height 80px
      display flex
      justify-content space-around
      .assetItem
        padding-top 16px
        .assetCount
          text-align center
          margin-bottom 2px
          font-size 16px
          line-height 24px
          font-weight 700
          .unit
            margin-right 2px
            font-size 12px
            line-height 18px
        .assetName
          font-size 12px
          line-height 18px
