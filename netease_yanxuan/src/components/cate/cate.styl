.catePage
  width 100%
  height 100%
  .header
    width 100%
    height 44px
    display flex
    align-items center
    padding 0 15px
    background #fff
  .cateContainer
    width 100%
    height 100%
    .cateNavVertWrap
      width 80px
      height 100%
      float left
      background #fff
      .cateNavVert
        height 100%
        padding 20px 0
        .item:first-of-type
          margin-top 0
        .item
          font-size 14px
          width 100%
          height 25px
          text-align center
          border none
          margin-top 20px
        .active 
          color #ab2b2b
          position relative
          &:before
            content ' '
            position absolute
            top 0
            left 0
            bottom 0
            width 3px
            height 25px
            background-color #ab2b2b
          .text          
            display block
            line-height 25px
            white-space nowrap
            text-overflow ellipsis
            overflow hidden
    .subCateList
      box-sizing border-box
      height 86vh
      margin-left 80px
      padding 15px 15px 10px
      .subCateContainer
        .item
          .banner
            width 100%
            height 96px
            margin-bottom 16px
            border-radius 4px
          .cateList
            width 100%
            margin-bottom 6px
            .hd
              max-width 264px
              font-size 14px 
              padding-bottom 4px
              margin-bottom 12px
              text-align left
              font-weight 700
              color #333
              border-bottom 1px solid #d9d9d9
              white-space nowrap
              text-overflow ellipsis
              overflow hidden
            .list
              display flex
              flex-wrap wrap
              .cateItem:nth-child(3n)
                margin-right -5px
              .cateItem
                display flex
                flex-direction column         
                margin-right 17px
                .cateImgWrapper
                  width 72px
                  height 72px
                .name
                  width 72px
                  height 36px
                  font-size 12px
                  color #333333
                  text-align center
                  line-height 18px
                  white-space nowrap
                  text-overflow ellipsis
                  overflow hidden
          